(7, 'Vikram', 'Hyderabad'),
(8, 'Asha', 'Chennai'),
(9, 'Manoj', 'Pune'),
(10, 'Swathi', 'Bengaluru');
Create Orders table
CREATE TABLE Orders (
 order_id INT PRIMARY KEY,
 customer_id INT,
 restaurant VARCHAR(50),
 amount DECIMAL(10,2),
 order_date DATE,
 FOREIGN KEY (customer_id) REFERENCES Customers(customer_id)
);
Insert data into Orders
INSERT INTO Orders (order_id, customer_id, restaurant, amount, order_date) VALUES
